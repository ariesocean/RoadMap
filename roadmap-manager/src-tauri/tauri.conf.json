{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Roadmap Manager",
  "version": "1.0.0",
  "identifier": "com.roadmap-manager.app",
  "build": {
    "beforeDevCommand": "npm run dev -- --port 1430",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1430",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Roadmap Manager",
        "width": 1000,
        "height": 800,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": false,
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {}
}